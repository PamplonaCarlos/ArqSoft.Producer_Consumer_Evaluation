{
    "name": "kafka-performance-study",
    "version": "1.0.0",
    "description": "Estudo de performance do Apache Kafka com Producer e Consumer em TypeScript",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "ts-node-dev --respawn --transpile-only",
        "start:producer": "ts-node src/producer/index.ts",
        "start:consumer": "ts-node src/consumer/index.ts",
        "start:monitoring": "ts-node src/monitoring/index.ts",
        "test:performance": "node scripts/performance-test.js",
        "test:stress": "node scripts/stress-test.js",
        "test:exhaustion": "node scripts/exhaustion-test.js",
        "kafka:up": "docker-compose up -d",
        "kafka:down": "docker-compose down",
        "kafka:logs": "docker-compose logs -f",
        "kafka:create-topic": "node scripts/create-topics.js",
        "kafka:list-topics": "docker-compose exec kafka kafka-topics --bootstrap-server localhost:9092 --list",
        "kafka:consumer-groups": "docker-compose exec kafka kafka-consumer-groups --bootstrap-server localhost:9092 --list",
        "clean": "rm -rf dist node_modules",
        "setup": "npm install && npm run kafka:up && sleep 10 && npm run kafka:create-topic"
    },
    "keywords": [
        "kafka",
        "typescript",
        "performance",
        "producer",
        "consumer",
        "messaging",
        "benchmark"
    ],
    "author": "Performance Study Team",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.8.0",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.0"
    },
    "dependencies": {
        "kafkajs": "^2.2.4",
        "commander": "^11.1.0",
        "chalk": "^4.1.2",
        "ora": "^5.4.1",
        "table": "^6.8.1",
        "prom-client": "^15.1.0",
        "express": "^4.18.2",
        "@types/express": "^4.17.18"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    }
}
